<?xml version="1.0" encoding="utf-8"?>
<!--意见反馈提交按钮点击样式-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--按压状态 solid背景 stroke描边 radius圆角-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#7AABED"/>
            <stroke android:width="1dp" android:color="#FF6DA5EF"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!--选中状态-->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#7AABED"/>
            <stroke android:width="1dp" android:color="#FF6DA5EF"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!--默认状态-->
    <item>
        <shape>
            <solid android:color="#81B6F9"/>
            <stroke android:width="1dp" android:color="#FF77A8E7"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>